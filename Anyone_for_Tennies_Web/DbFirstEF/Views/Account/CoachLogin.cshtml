@model DbFirstEF.Models.Coach
@{
    var coachesList = ViewData["CoachesList"] as List<DbFirstEF.Models.Coach>;
}

<div class="container mt-4">
    <h2 class="text-center">Specific Coach Profile Log-in</h2>

    <form asp-action="CoachLogin" method="post" class="shadow p-4 rounded bg-light">
        <div class="form-group mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Login</button>
        </div>
    </form>

    <h3 class="text-center mt-5">Available Coaches:</h3>
    @if (coachesList != null && coachesList.Count > 0)
    {
        <table class="table table-striped table-hover mt-3">
            <thead class="table-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var coach in coachesList)
                {
                    <tr>
                        <td>@coach.FirstName</td>
                        <td>@coach.LastName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger text-center">No coaches found.</p>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

