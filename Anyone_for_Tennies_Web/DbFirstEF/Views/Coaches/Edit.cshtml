@model DbFirstEF.Models.CoachProfile

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Coach</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="editForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CoachId" class="control-label"></label>
                <input asp-for="CoachId" class="form-control" readonly /> 
                <span asp-validation-for="CoachId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biography" class="control-label"></label>
                <textarea asp-for="Biography" class="form-control" id="biographyInput"></textarea>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Details" asp-route-id="@Model.CoachId" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Save" class="btn btn-primary" id="saveButton" disabled />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a href="https://localhost:7193/Account/CoachLogin" class="btn btn-outline-secondary">
        Go to List of Coaches
    </a>
</div>

@section Scripts {
    @* Fix: Removed @await for the RenderPartialAsync *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        //biography input and save button
        const biographyInput = document.getElementById('biographyInput');
        const saveButton = document.getElementById('saveButton');

        //store initial value of biography
        const initialBioValue = biographyInput.value;

        //add event listener to detect changes in biography input
        biographyInput.addEventListener('input', function () {
            // Enable save button only if biography changed
            if (biographyInput.value.trim() !== initialBioValue.trim()) {
                saveButton.disabled = false;
            } else {
                saveButton.disabled = true;
            }
        });
    </script>
}
