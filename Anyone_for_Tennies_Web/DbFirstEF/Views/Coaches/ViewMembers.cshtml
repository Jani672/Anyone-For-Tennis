@model IEnumerable<DbFirstEF.Controllers.MemberViewModel>

@{
    ViewData["Title"] = "Members List";
}

<h1 style="font-weight: bold;">Members List</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="font-weight: bold; text-align: center;">Name</th>
            <th style="font-weight: bold; text-align: center;">Contact Info</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var member in Model)
            {
                <tr>
                    <td style="text-align: center;">@member.FullName</td>
                    <td style="text-align: center;">@member.Email</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" style="text-align: center;">No members found.</td>
            </tr>
        }
    </tbody>
</table>
