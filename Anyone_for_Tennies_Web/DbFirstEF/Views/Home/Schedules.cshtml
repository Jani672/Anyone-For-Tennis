@model dynamic
@{
    ViewData["Title"] = "Upcoming Coaching Sessions";
}

<h1 style="font-weight: bold;">Upcoming Coaching Sessions</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="font-weight: bold; text-align: center; border: 1px solid black;">Date</th>
            <th style="font-weight: bold; text-align: center; border: 1px solid black;">Time</th>
            <th style="font-weight: bold; text-align: center; border: 1px solid black;">Day</th>
            <th style="font-weight: bold; text-align: center; border: 1px solid black;">View Members</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < 5; i++)  //Placeholder
        {
            <tr>
                <td style="text-align: center; border: 1px solid black;">
                    @* Replace with actual dynamic data like Model[i].Date *@
                    <span>2024-11-0@i</span> 
                </td>
                <td style="text-align: center; border: 1px solid black;">
                    @* Replace with actual dynamic data like Model[i].Time *@
                    <span>10:00 AM</span> 
                </td>
                <td style="text-align: center; border: 1px solid black;">
                    @* Replace with actual dynamic data like Model[i].Day *@
                    <span>Monday</span> 
                </td>
                <td style="text-align: center; border: 1px solid black;">
                    <form action="@Url.Action("ViewMembers", "Coaches", new { id = i })" method="post">
                        <button type="submit" class="btn btn-primary">Explore Members List</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
